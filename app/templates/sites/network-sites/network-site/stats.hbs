{{outlet}}

<h3 class='row-title'>Summary</h3>

<div class="row">
  <div class="col-lg-12">
    {{crl-stats-table headers=model.networkElementCount.attributeNames tableContent=model.networkElementCount.counts}}
  </div>
</div>

{{#each chartStatTypes as |type|}}
  <h3 class='row-title'>{{type.title}}</h3>
  <div class="row">
    <div class="col-md-6">
      {{crl-stats-pie labels=model.ponUseSite.types values=model.ponUseSite.values}}
    </div>
    <div class="col-md-6">	
      {{crl-stats-bar data=model.ponUseBuilding.stats}}
    </div>
  </div>
{{/each}}

<h3 class='row-title'>Feeder Capacity</h3>
<div class='row'>
  <div class='col-md-6'>
    {{crl-stats-pie labels=model.feederCapacitySite.types values=model.feederCapacitySite.values}}
  </div>
  <div class='col-md-6'></div>
</div>

<h3 class='row-title'>Distribution Spares by Floor</h3>

<div class="row">
  <div class="col-lg-12">
    {{ crl-stats-bar useFloorsData=true }}
  </div>
</div>
