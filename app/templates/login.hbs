{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

<div class='row'>
  <div class='col-md-6 col-sm-8 center-block'>
    <div class='panel panel-default login-form'>
      <div class='panel-body'>
        <form>
          <div class='form-group'>
            {{x-input
                type='email'
                class='form-control'
                placeholder='Email'
                value=email
                data-test-selector='email-input'
            }}
          </div>
          <div class='form-group'>
            {{x-input
                type='password'
                class='form-control'
                placeholder='Password'
                value=password
                data-test-selector='password-input'
            }}
          </div>
          <button
            type='submit'
            {{action (route-action 'authenticate' email password)}}
            class='btn btn-default'
            data-test-submit-button
            disabled={{authenticateTask.isRunning}}
          >
            {{#if authenticateTask.isIdle}}
              Submit
            {{else}}
              Signing in...
              {{fa-icon "spinner" spin=true}}
            {{/if}}
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
