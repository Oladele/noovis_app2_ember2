<form {{action 'submit' on='submit'}}>
  <div class='form-group'>
    <label>
      Email
      {{x-input
          value=email
          size=50
          placeholder='Your email'
          data-test-selector='email-input'
          class='form-control'
      }}
    </label>
    {{#if (v-get this 'email' 'isDirty')}}
      {{#each (v-get this 'email' 'messages') as |message|}}
        <div>{{message}}</div>
      {{/each}}
    {{/if}}
  </div>

  <div class='form-group'>
    <label>
      Company
      {{#x-select
          value=company
          class='form-control company-select'
      }}
        {{#x-option value=null}}Select a company{{/x-option}}
        {{#each companies as |_company| }}
          {{#x-option value=_company}}{{_company.name}}{{/x-option}}
        {{/each}}
      {{/x-select}}
    </label>
  </div>

  <div class='form-group'>
    <label>
      Role
      {{#x-select
          value=role
          class='form-control role-select'
      }}
        {{#x-option value=null}}Select a role{{/x-option}}
        {{#each roles as |_role|}}
          {{#x-option value=_role}}{{capitalize _role}}{{/x-option}}
        {{/each}}
      {{/x-select}}
    </label>
  </div>

  <div class='form-group'>
    <label>
      Password
      {{x-input
          value=password
          type='password'
          size=50
          data-test-selector='password-input'
          class='form-control'
      }}
    </label>
    {{#if (v-get this 'password' 'isDirty')}}
      {{#each (v-get this 'password' 'messages') as |message|}}
        <div>{{message}}</div>
      {{/each}}
    {{/if}}
  </div>

  <div class='form-group'>
    <label>
      Password Confirmation
      {{x-input
          value=passwordConfirmation
          type='password'
          size=50
          data-test-selector='passwordConfirmation-input'
          class='form-control'
      }}
    </label>
    {{#if (v-get this 'passwordConfirmation' 'isDirty')}}
      {{#each (v-get this 'passwordConfirmation' 'messages') as |message|}}
        <div>{{message}}</div>
      {{/each}}
    {{/if}}
  </div>

  <button
    {{action 'submit'}}
    data-test-selector='submit-button'
    class='btn btn-primary'
  >
    Update
  </button>
</form>
